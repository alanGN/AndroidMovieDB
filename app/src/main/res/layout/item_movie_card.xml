<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:contentDescription="@string/imageCover"
        android:id="@+id/movieCoverIv"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <TextView
        android:textColor="@color/colorWhite"
        android:drawableEnd="@drawable/ic_star_black_24dp"
        android:layout_gravity="top|end"
        android:id="@+id/movieAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:gravity="bottom"
        android:layout_margin="@dimen/margin_general_between_items"
        android:text="@string/average" />
    <View
        android:background="@color/colorDarkTranslucent"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:textColor="@color/colorWhite"
        android:layout_gravity="bottom"
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_general_between_items"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/title" />
</FrameLayout>